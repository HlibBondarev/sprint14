@model ProductError

<div style="text-align: center;">
    <h1 style="color: red;">🚫 404 Error 🚫</h1>
    <p style="font-size: 1.5em;">@Model.Message <strong>@Model.ProductId</strong>.<br></p>
    <p style="font-size: 1.5em;">Please, try again or browse our product list.</p>
    <a href="/Product/Index" style="font-size: 1.5em; color: blue;">🔙 Back to product list</a>
</div>

